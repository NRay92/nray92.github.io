                .contacts-form
                  .contacts__title Оставьте свои контакты
                  .contacts__description И мы вам перезвоним или напишем
                  form.a-form
                    .a-form__tabs
                      .a-form__tab.active(data-for="contact-phone") Телефон
                      .a-form__tab(data-for="contact-telegram") Telegram
                      .a-form__tab(data-for="contact-whatsapp") WatsApp
                      .a-form__tab(data-for="contact-email") E-mail
                    .a-form__fields
                      input.a-form__input.active#contact-phone(type="tel" placeholder="+7 (_ _ _) _ _ _ - _ _ _ _")
                      input.a-form__input#contact-telegram(type="text" placeholder="@username")
                      input.a-form__input#contact-whatsapp(type="text" placeholder="+7 (_ _ _) _ _ _ - _ _ _ _")
                      input.a-form__input#contact-email(type="email" placeholder="E-mail")
                    .a-form__message
                      textarea.a-form__textarea(placeholder="Сообщение" rows="1")
                    .a-form__file
                      label.upload(for='contact-custom-file-upload')
                        span.upload-file-name.js-value Прикрепить документ
                        input#contact-custom-file-upload(type='file' name='attachment-file' value='1')
                    .a-form__button
                      input.a-form__submit(type="submit" value="Отправить")

