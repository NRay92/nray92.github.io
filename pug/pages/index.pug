      .section.section--4(data-anchor='contacts')
        .main
          .n-grid-row
            .n-grid-col.n-grid-col-xl-1.n-grid-col-md-1
            .n-grid-col.n-grid-col-xl-7.n-grid-col-md-6.n-grid-col-xs-6
